<h1>
  <strong>Books</strong>
</h1>

<% @books.each do |book| %>

<div class="index">
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%=book.title %></td>
        <td><%=book.body %></td>
        <td><%=link_to"Show",book_path(book.id)%></td>
        <td><%=link_to"Edit",edit_book_path(book.id)%></td>
        <td><%=link_to"Destroy",destroy_book_path(book.id),method: :delete,"data-confirm" =>"Are you sure?"%></td>
      </tr>
    </tbody>
 </table>

</div>

<% end %>

